#1、查看mysql中的所有数据库
show databases;
#2、新建数据库
create database CrystalDB;
#3、切换数据库
use CrystalDB;
#4、创建数据表
create table users(
    user_id int primary key auto_increment,
    user_name varchar(50) unique not null,
    user_password varchar(50) not null,
    start int default 0 not null
)default character set utf8;

create table crystal(
    crystal_id int primary key auto_increment,
    crystal_name varchar(255) not null,
    crystal_count varchar(255) not null,
    price double not null,
    type varchar(4) default 'A' not null,
    crystal_num int not null,
    crystal_xl int default 0 not null,
    stata int default 1
)default character set utf8;

create table usersInfo(
    user_info_id int primary key auto_increment,
    user_id    int not null,
    sex varchar (4),
    user_ph varchar (11) not null,
    address varchar (255) not null
)default character set utf8;

create table older(
    older_id int primary key auto_increment,
    user_id int not null,
    crystal_id int not null,
    num int default 1 not null ,
    time varchar(255) not null
)default character set utf8;

create table bulletin(
    bulletin_id int primary key auto_increment,
    title varchar(255) not null,
    content varchar(255) not null,
    publish_time varchar(255) not null
)default character set utf8;
#添加单条数据
insert into users(user_name, user_password) values ('张三','123456');
#添加多条数据
insert into users(user_name, user_password) values ('李四','123456'),('王五','123456');
#修改
update users set user_password='654321' where user_id=2;
#删除
delete from users where user_id=3;
#查询数据表
select* from users;